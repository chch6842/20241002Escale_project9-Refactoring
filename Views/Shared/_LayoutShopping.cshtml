<!DOCTYPE html>
<html lang="zh-Hant">

<head>
  <title>Shopping</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://unpkg.com/swiper/swiper-bundle.min.css" rel="stylesheet" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <link href="@Url.Content("~/lib/ESCALE/Home/css/shopping.css")" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
 @* <link rel="stylesheet" href="@Url.Content("~/lib/ESCALE/Home/css/index.css")"> *@

    @* 依需求引入不同樣式表 *@

<script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>

@await RenderSectionAsync("Styles", required: false)
@await RenderSectionAsync("Scripts", required: false)


</head>

<body>
  <div class="con mb-l">
        <nav class="navbar fix-top navbar-expand-lg navbar-light bg-secondary">
            <!-- <div class="container-fluid"> -->
            <a class="navbar-brand" href="#">
                <img src="@Url.Content("~/lib/ESCALE/Home/image/handshake (1).png")" alt="Brand" style="height: 30px;">
            </a>

            <button data-bs-toggle="collapse" data-bs-target=".collapse" class="navbar-toggler">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav text-center">
                    <!-- nav=link 水平呈現,navbar-nav=垂直呈現 text-center=內容居-->
                    <li class="nav-item">
                        <a href="@Url.Action("Login" , "User" , new {area = ""})" class="nav-link">會員首頁</a>
                    </li>
                    <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @* 會員功能 *@
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @if (SessionService.IsLogin)
                                    {
                                        <li><a href="@Url.Action("Init", "Order", new { area = "Member", id = "unclosed" })" class="dropdown-item">未結訂單查詢</a></li>
                                        <li><a href="@Url.Action("Init", "Order", new { area = "Member", id = "closed" })" class="dropdown-item">歷史訂單查詢</a></li>
                                        <li><a href="@Url.Action("Index", "Profile", new { area = "" })" class="dropdown-item">我的帳號</a></li>
                                        <li><a href="@Url.Action("Logout", "User", new { area = "" })" class="dropdown-item">登出</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("Login", "User", new { area = "" })" class="dropdown-item">登入</a></li>
                                    }
                                </ul>
                            </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Record" , "User" , new {area = ""})" class="nav-link">雲端資料庫</a>
                    </li>
          <li class="nav-item"><a href="@Url.Action("Index" , "Category" , new {area = "", id = ""})"
              class="nav-link">購物商城</a>
          </li>
                    <li class="nav-item"> <a href="@Url.Action("Index" , "Contact" , new {area = "" })"class="nav-link">聯絡我們</a>
                    </li>
                    <li class="nav-item">
                        <div class="common__lightbox-box">
                            <div class="search-lightbox">
                                <a class="search-lightbox__close" data-lightbox-close=""></a>
                                <div class="search-lightbox__box">
                                    <form action="/search" onsubmit="return search()" class="search-lightbox__form">
                                        <input type="text" name="q" value="" placeholder="請輸入關鍵字搜尋...">
                                        <button type="submit"><img
                                                src="@Url.Content("~/lib/ESCALE/Home/image/magnifying-glass.png")"
                                                alt="搜索圖標"></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
  <div class="bread">
    <ul class="breadcrumb">
      <li class="breadcrumb-item2"><a href="">購物車</a></li>
      <li class="breadcrumb-item2"><a href="">精選商品</a></li>
    </ul>
  </div>
  <div class="container mb-2">
    @RenderBody()
  </div>
  <div class="footer">
    <div class="social">
      <a href="#">© 2024 MyFitnesspal</a>
      <a href="#">免責聲明</a>
      <a href="#">關於我們</a>
    </div>
    <div class="social-icons">
      <a href="#" class="social-icon"><i class="fab fa-line"></i></a>
      <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
      <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
    </div>
  </div>

  <!-- Swiper JS -->
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <!-- 搜尋框 -->
  <script>
    function search() {
      var q = $("input[name='q']").val();
      if (q == "") {
        alert("請輸入關鍵字");
        return false;
      }

      return true
    }

  </script>


  <script src="@Url.Content("~/lib/ESCALE/Home/js/shopping.js")" />

  </script>
</body>
</html>
